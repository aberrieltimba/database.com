<% content_for :pageTitle do %> <%= t ".ptitle" %> <% end %>
<% content_for :customStyleSheets do %> <%= stylesheet_link_tag("slider") %> <% end %>
<% content_for :customLibs do %> <%= javascript_include_tag("slider") %> <% end %>
<!--Slider -->
<div class="row">
	<div class="column grid_12 relative">
		<div id="EasingIndex">
			<ul class="hmenu">
				<li class="active"><a href="javascript;:"></a></li>
