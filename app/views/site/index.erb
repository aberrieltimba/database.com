			</ul>
		</div>
		<br />
		<div id="SliderWrapper">			
			<div id="EasingSlider">
				<div class="slideItem">
					<div class="background">
						<%= image_tag("slider/mobile.png") %>
					</div>
					<div class="text">
						<h2><%= t ".slider_mobile_title" %></h2>
						<h3><%= image_tag("dbdc/smallgear.png") %> <%= t ".slider_mobile_subtitle" %></h3>
						<span><%= t ".slider_mobile_text" %> <a href="javascript:;"><%= t ".read_more" %> ></a></span>
					</div>
				</div>
				<div class="slideItem">
					<div class="background">
						<%= image_tag("slider/social.png") %>
					</div>
					<div class="text">
						<h2><%= t ".slider_social_title" %></h2>
						<h3><%= image_tag("dbdc/smallgear.png") %> <%= t ".slider_social_subtitle" %></h3>
						<span><%= t ".slider_social_text" %> <a href="javascript:;"><%= t ".read_more" %> ></a></span>
					</div>
				</div>
				<div class="slideItem">
					<div class="background">
						<%= image_tag("slider/trusted.png") %>
					</div>
					<div class="text">
						<h2><%= t ".slider_trusted_title" %></h2>
						<h3><%= t ".slider_trusted_subtitle", :apicounter => number_with_delimiter(@apicounter) %></h3>
						<span><%= t ".slider_trusted_text" %> <a href="javascript:;"><%= t ".read_more" %> ></a></span>
					</div>
				</div>
				<div class="slideItem">
					<div class="background">
						<%= image_tag("slider/open.png") %>
